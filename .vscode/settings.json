        "dsccommunity",
        "SqlTempdbFileCount",
        "SqlTempdbFileSize",
        "SqlTempdbLogFileSize",
        "Maxime",
        "Daniou",
        "Reist",
        "Reilingh",
        "Sarti",
        "RSSQLServer",
        "RSSQLInstanceName",
