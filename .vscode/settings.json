        ".git"
    ],
    "cSpell.ignoreRegExpList": [
        "/HKCU:/g",
        "/analyzersettings\\.psd1/g",
        "/SQLENGINE/g",
        "//norestart/g",
        "/@Zuldans/g",
        "/@kungfu71186/g",
        "/@pshamus/g",
        "/@mdaniou/g",
        "/@adamrushuk/g",
        "/@randomnote1/g",
